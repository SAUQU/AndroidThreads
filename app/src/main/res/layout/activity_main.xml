<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.segundoauqui.androidthreads.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView

        android:textSize="30dp"
        android:id="@+id/tvT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:textSize="30dp"
        android:id="@+id/tvT2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <TextView

        android:textSize="30dp"
        android:id="@+id/tvTesting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

   <Button
       android:text="USING THREAD CLASS"
       android:onClick="executeThreads"
       android:id="@+id/btnThread"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <Button

        android:text="USING RUNNABLE INTERFACE"
        android:onClick="executeThreads"
        android:id="@+id/btnRunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="executeThreads"
        android:text="using"
        android:id="@+id/btnAsyntask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="executeThreads"
        android:text="New using"
        android:id="@+id/btnThreadHandlerMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:textSize="30dp"
        android:id="@+id/tvT3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
